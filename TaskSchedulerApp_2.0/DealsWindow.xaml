<Window x:Class="TaskSchedulerApp_2._0.DealsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskSchedulerApp_2._0"
        mc:Ignorable="d"
        Title="DealsWindow"     
        Height="400" MinHeight="400" MaxHeight="400"
        Width="700" MinWidth="700" MaxWidth="700">
    <Window.Resources>
        <Style x:Key="HeightWidthButton">
            <Setter Property="ItemsControl.Height" Value="40"/>
            <Setter Property="ItemsControl.Width" Value="200"/>
            <Setter Property="ItemsControl.Margin" Value="5"/>
            <Setter Property="ItemsControl.Foreground" Value="White"/>
            <Setter Property="ItemsControl.Background" Value="DimGray"/>
            <Setter Property="Control.FontFamily" Value="Consolas"/>
            <Setter Property="Control.FontSize" Value="20"/>
        </Style>
        <Style x:Key="FontStyle">
            <Setter Property="Control.FontFamily" Value="Consolas"/>
            <Setter Property="Control.FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="ToDoListLabel" HorizontalContentAlignment="Center" Style="{StaticResource FontStyle}"/>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="5">
                <ListBox x:Name="DealsListBox" Width="300" Height="200" Style="{StaticResource FontStyle}"/>                
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button x:Name="OpenDealButton" Content="Открыть чек-лист" Style="{StaticResource HeightWidthButton}"/>
                <Button x:Name="AddDealButton" Content="Добавить дело" Style="{StaticResource HeightWidthButton}" />
                <Button x:Name="DeleteDealButton" Content="Удалить дело" Style="{StaticResource HeightWidthButton}"/>
                <Button x:Name="EditDealButton" Content="Изменить дело" Style="{StaticResource HeightWidthButton}"/>
                <Button x:Name="CompletDealButton" Content="Отметить выполненным" Style="{StaticResource HeightWidthButton}"/>
                <Button x:Name="CloseButton" Content="Выйти" Style="{StaticResource HeightWidthButton}" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
