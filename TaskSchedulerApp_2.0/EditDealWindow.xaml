<Window x:Class="TaskSchedulerApp_2._0.EditDealWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskSchedulerApp_2._0"
        mc:Ignorable="d"
        Title="EditDealWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <Label Content="Название дела:" Margin="5"/>
            <Label Content="Приоритет дела:" Margin="5"/>
            <Label Content="Дедлайн:" Margin="5"/>
            <Button x:Name="SaveButton" Content="Сохранить" Margin="10" Click="SaveButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="NameTextBox" Margin="10"/>
            <ComboBox x:Name="PriorityComboBox" Margin="10">
                <TextBlock>1</TextBlock>
                <TextBlock>2</TextBlock>
                <TextBlock>3</TextBlock>
                <TextBlock>4</TextBlock>
                <TextBlock>5</TextBlock>
            </ComboBox>
            <Calendar x:Name="DeadlainCalendar" Margin="5"/>
            <Button x:Name="СancelButton" Content="Отмена" Margin="10" Click="СancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
